        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">#394BAF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3F51B5</item>
